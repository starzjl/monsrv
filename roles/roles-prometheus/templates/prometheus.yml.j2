global:
  scrape_interval: 15s
  scrape_timeout: 10s
  evaluation_interval: 15s

rule_files:
  - {{ prometheus_config_dir }}/rules/*.rules

alerting:
  alertmanagers:
  - static_configs:
    - targets:
      - localhost:9093

scrape_configs:
  - job_name: "prometheus"
    static_configs:
    - targets:
      - localhost:9090

  - job_name: "node"
    file_sd_configs:
    - files:
      - "{{ prometheus_config_dir }}/file_sd/node.yml"
